<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity">
    <Button
        android:id="@+id/btback"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/btback"
        app:layout_constraintStart_toStartOf="@+id/btstart"
        app:layout_constraintTop_toBottomOf="@+id/btstart" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="320dp"
        android:layout_height="415dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/btnext"
        app:layout_constraintEnd_toEndOf="@+id/btstart"
        app:layout_constraintTop_toBottomOf="@+id/btstart" />

    <Button
        android:id="@+id/btstart"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="@string/btstart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/iv"
        app:layout_constraintTop_toTopOf="@+id/iv"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btchange"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:text="お気に入り"
        app:layout_constraintEnd_toEndOf="@+id/iv2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="お気に入り"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/iv"
        app:layout_constraintTop_toTopOf="@+id/btchange" />
</androidx.constraintlayout.widget.ConstraintLayout>